<odoo>
    <record model="ir.ui.view" id="account_move_template_form_view">
        <field name="name">account.move.template.form</field>
        <field name="model">account.move.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group name="config" colspan="4" col="4">
                        <field name="product_tmpl_ids" colspan="4" />
                        <field name="line_ids" colspan="4" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="account_move_template_tree_view">
        <field name="name">account.move.template.tree</field>
        <field name="model">account.move.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_tmpl_ids" />
                <field name="line_ids" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="account_move_template_act_window">
        <field name="name">Account Move Template</field>
        <field name="res_model">account.move.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="account_move_template_menu">
        <field name="name">Account Move Template</field>
        <field name="action" ref="account_move_template_act_window" />
        <field name="sequence" eval="100" />
    </record>
</odoo>
